<%- include('../components/headAdmin') %>
    <div id="create-edit-hidden"></div>
    <section class="dashboard">
        <section id="edit-product-container" class="dashboard-form">
            <form id="edit-product-form" class="form">
                <section><h2><span><i class="fa-solid fa-pen-to-square"></i></span>Edit Product</h2></section>
                <label for="name">Name</label>
                <input type="text" name="name" id="name" value="<%= product.name %>">
                <label for="description">Description</label>
                <input type="text" name="description" id="description" value="<%= product.description %>">
                <label for="gender">Gender</label>
                <input type="text" name="gender" id="gender" value="<%= product.gender %>">
                <label for="category">Category</label>
                <input type="text" name="category" id="category" value="<%= product.category %>"> 
                <label for="type">Type</label>
                <input type="text" name="type" id="type" value="<%= product.type %>">
                <label for="image_main">Image Main (1200 x 600)</label>
                <input type="text" name="image_main" id="image_main" value="<%= product.image_main %>">
                <input type="file" name="image_file_main" id="image_file_main">
                <label for="image_1">Image 1 (Optional)</label>
                <input type="text" name="image_1" id="image_1" value="<%= product.image_1 %>">
                <input type="file" name="image_file_1" id="image_file_1">
                <label for="image_2">Image 2 (Optional)</label>
                <input type="text" name="image_2" id="image_2" value="<%= product.image_2 %>">
                <input type="file" name="image_file_2" id="image_file_2">
                <label for="image_3">Image 3 (Optional)</label>
                <input type="text" name="image_3" id="image_3" value="<%= product.image_3 %>">
                <input type="file" name="image_file_3" id="image_file_3">
                <label for="image_4">Image 4 (Optional)</label>
                <input type="text" name="image_4" id="image_4" value="<%= product.image_4 %>">
                <input type="file" name="image_file_4" id="image_file_4">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" value="<%= product.price %>"> 
                <label for="count_in_stock">Count In Stock</label>
                <input type="text" name="count_in_stock" id="count_in_stock" value="<%= product.count_in_stock %>">
                <button type="submit" class="primary bold" id="pes-btn">UPDATE</button>
                <a class="back-to-pl" href="/admin/product-list">CANCEL</a>
            </form>   
        </section>
    </section>

<%- include('../components/footer') %>